generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id        Int      @id @default(autoincrement())
  isbn      String   @unique
  title     String
  genre     String
  pages     Int
  cover     String?
  synopsis  String?
  year      Int
  author    Author   @relation(fields: [authorId], references: [id])
  authorId  Int
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Author {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  firstName String
  lastName  String
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
